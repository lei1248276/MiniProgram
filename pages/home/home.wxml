<!--pages/home/home.wxml-->
<!-- 1.小程序的数据绑定 -->
<view>Hello {{name}}</view>

<!-- 2.小程序的列表展示 -->
<view wx:for='{{list}}'>{{item.name}}-{{item.age}}</view>

<!-- 3.小程序的事件监听 -->
<view>当前计数：{{counter}}</view>
<button size="mini" 
        bindtap="increment">+</button>
<button size="mini"
        bindtap="decrement">-</button>

<!-- 点击获取用户信息 -->
<button size="mini"
        open-type="getUserInfo"
        bindgetuserinfo="getUser">获取用户信息</button>

<!-- 展示用户信息 -->
<open-data type="userNickName"></open-data>
<open-data type="userAvatarUrl"></open-data>
<view wx:for="{{lists}}">{{item.title}}</view>